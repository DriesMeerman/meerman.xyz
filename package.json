{
	"name": "meerman.xyz",
	"private": false,
	"version": "3.2.0",
	"type": "module",
	"scripts": {
		"predev": "node --import tsx/esm tools/build.ts content",
		"dev": "vite dev",
		"prebuild": "node --import tsx/esm tools/build.ts all",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"tools:build": "node --import tsx/esm tools/build.ts",
		"build:index": "node --import tsx/esm tools/build.ts index",
		"build:articles": "node --import tsx/esm tools/build.ts articles",
		"build:markdown": "node --import tsx/esm tools/build.ts articles",
		"validate:blog": "node --import tsx/esm tools/build.ts validate",
		"build:images": "node --import tsx/esm tools/build.ts images",
		"build:sitemap": "node --import tsx/esm tools/build.ts sitemap",
		"fetch-assets": "node --import tsx/esm tools/build.ts fetch-assets",
		"test:visual": "playwright test e2e/visual-regression.spec.ts",
		"test:visual:update": "playwright test e2e/visual-regression.spec.ts --update-snapshots",
		"test:visual:report": "node --import tsx/esm tools/commands/visual-report.ts",
		"test:particles": "playwright test e2e/particles-smoke.spec.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.21",
		"cheerio": "^1.2.0",
		"glob": "^11.0.0",
		"gray-matter": "^4.0.3",
		"markdown-it": "^13.0.1",
		"markdown-it-meta": "^0.0.1",
		"marked": "^14.1.2",
		"marked-footnote": "^1.2.4",
		"postcss": "^8.5.6",
		"rss": "^1.2.2",
		"sharp": "^0.34.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.21.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	}
}
