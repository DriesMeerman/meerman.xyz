{
  "name": "meerman.xyz",
  "version": "2.2.2",
  "private": false,
  "scripts": {
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "npm run buildIndex && npm run build:tailwind && rollup -c",
    "buildIndex": "node generateBlogIndex.js",
    "start": "sirv static",
    "serve": "serve static -p 80",
    "dev": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\""
  },
  "devDependencies": {
    "@jackfranklin/rollup-plugin-markdown": "^0.4.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "node-sass": "^7.0.1",
    "postcss-cli": "^9.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-glob": "^1.0.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.5",
    "rollup-plugin-terser": "^7.0.0",
    "rss": "^1.2.2",
    "sass": "^1.69.5",
    "svelte": "^4.0.0",
    "svelte-image": "^0.2.9",
    "svelte-preprocess": "^5.0.3",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "particles.js": "github:DriesMeerman/particles.js",
    "sirv-cli": "^2.0.0",
    "svelte-spa-router": "^3.2.0",
    "svelte-vertical-timeline": "^0.0.2"
  }
}
